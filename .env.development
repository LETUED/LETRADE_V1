# Letrade V1 개발 환경 설정

# 환경 설정
ENVIRONMENT=development

# 데이터베이스 설정 (로컬 PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/letrade_dev

# RabbitMQ 설정 (로컬)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Redis 설정 (로컬)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API 설정
API_HOST=127.0.0.1
API_PORT=8080
API_LOG_LEVEL=debug

# 보안 설정 (개발용)
JWT_SECRET_KEY=dev-secret-key-not-for-production
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# 거래소 API (Mock 모드)
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true

# 성능 설정
MAX_WORKERS=2
POOL_SIZE=10
CONNECTION_TIMEOUT=30

# 로깅 설정
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_FILE=logs/letrade_dev.log

# 개발 설정
DEBUG=true
TESTING=false
MOCK_MODE=true