# =============================================================================
# Letrade_v1 소액 실거래 테스트 환경 변수
# 주의: 이 파일은 실제 API 키를 포함하므로 절대 Git에 커밋하지 마세요!
# =============================================================================

# 시스템 설정
ENVIRONMENT=live_testing
CONFIG_FILE=config/live_trading_test.yaml
LOG_LEVEL=INFO

# 데이터베이스 설정 (실거래 테스트 전용 DB)
DATABASE_URL=postgresql://letrade_user:letrade_password@localhost:5432/letrade_live_test_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=letrade_live_test_db
DB_USER=letrade_user
DB_PASSWORD=letrade_password

# RabbitMQ 설정
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Binance API 설정 (실제 거래소)
# 주의: 아래 값들은 실제 API 키로 교체해야 합니다
BINANCE_API_KEY=your_real_binance_api_key_here
BINANCE_SECRET_KEY=your_real_binance_secret_key_here
BINANCE_TESTNET=false
BINANCE_SANDBOX=false

# 텔레그램 설정 (실거래 알림용)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ADMIN_USER_ID=your_admin_user_id_here

# 실거래 테스트 제한
LIVE_TEST_ENABLED=true
LIVE_TEST_CAPITAL=100.0
LIVE_TEST_MAX_LOSS=5.0
LIVE_TEST_DAILY_LOSS_LIMIT=0.50

# 보안 설정
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# GCP 설정 (Secret Manager 사용)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_SECRET_MANAGER_ENABLED=true

# 모니터링 설정
PROMETHEUS_PORT=8000
HEALTH_CHECK_PORT=8080
METRICS_ENABLED=true

# 백업 설정
BACKUP_ENABLED=true
BACKUP_INTERVAL_MINUTES=5
BACKUP_LOCATION=backups/live_test/

# 비상 정지 설정
EMERGENCY_STOP_ENABLED=true
EMERGENCY_CONTACT_EMAIL=your_email@example.com
EMERGENCY_PHONE=your_phone_number

# Redis 설정 (세션 및 캐시)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 개발/디버그 설정
DEBUG=false
VERBOSE_LOGGING=true
AUDIT_LOGGING=true
PERFORMANCE_MONITORING=true