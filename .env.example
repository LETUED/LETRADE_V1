# =============================================================================
# Letrade_v1 환경 변수 설정 예시
# 실제 사용 시 이 파일을 .env로 복사하고 실제 값으로 변경하세요
# =============================================================================

# 환경 설정
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 데이터베이스 설정
DATABASE_URL=postgresql://letrade_user:letrade_password@localhost:5432/letrade_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# RabbitMQ 설정
RABBITMQ_URL=amqp://letrade_user:letrade_password@localhost:5672/
RABBITMQ_EXCHANGE=letrade_exchange
RABBITMQ_HEARTBEAT=600

# Redis 설정
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# GCP 설정 (프로덕션용)
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# 거래소 API 키 (Secret Manager 경로)
BINANCE_API_SECRET_PATH=projects/your-project/secrets/binance-api-key
BINANCE_SECRET_SECRET_PATH=projects/your-project/secrets/binance-secret-key

# 텔레그램 봇 설정
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_ADMIN_USER_IDS=123456789,987654321

# 보안 설정
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key
API_RATE_LIMIT=100

# 거래 설정
DEFAULT_POSITION_SIZE_PERCENT=2.0
MAX_POSITION_SIZE_PERCENT=10.0
MAX_DAILY_LOSS_PERCENT=5.0
MAX_PORTFOLIO_EXPOSURE_PERCENT=80.0

# 모니터링 설정
PROMETHEUS_PORT=8000
HEALTHCHECK_PORT=8080
SENTRY_DSN=your-sentry-dsn

# CLI 설정
CLI_DEFAULT_OUTPUT_FORMAT=table
CLI_PAGINATION_SIZE=20

# 개발 전용 설정
DEV_MOCK_EXCHANGE=false
DEV_DRY_RUN=true
DEV_FAST_MODE=false