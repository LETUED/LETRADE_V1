# RabbitMQ 설정
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Binance API 설정 (시뮬레이션 모드)
BINANCE_API_KEY=simulation_api_key_demo
BINANCE_SECRET_KEY=simulation_secret_key_demo
BINANCE_TESTNET=true
BINANCE_SANDBOX=true
SIMULATION_MODE=true
DRY_RUN=false  # 거래 실행까지 시뮬레이션

# 텔레그램 설정 (시뮬레이션용)
TELEGRAM_BOT_TOKEN=simulation_bot_token
TELEGRAM_CHAT_ID=simulation_chat_id
TELEGRAM_ADMIN_USER_ID=simulation_admin

# 실거래 테스트 제한 (시뮬레이션)
LIVE_TEST_ENABLED=true
LIVE_TEST_CAPITAL=100.0
LIVE_TEST_MAX_LOSS=5.0
