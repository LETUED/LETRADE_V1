# 시스템 설정
ENVIRONMENT=simulation_testing
CONFIG_FILE=config/live_trading_test.yaml
LOG_LEVEL=INFO

# 데이터베이스 설정 (시뮬레이션 테스트 전용 DB)
DATABASE_URL=postgresql://letrade_user:letrade_password@localhost:5432/letrade_simulation_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=letrade_simulation_db
DB_USER=letrade_user
